<resources>

    <style name="AppThemeWithNoAcBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorMain</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorForSmallCategories</item>
    </style>

    <style name="CustomText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="fontFamily">@font/opensans</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomIcon" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="layout_gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CustomIconsText" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="background">@color/colorWhite</item>
        <item name="android:stateListAnimator">@null</item>

        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="fontFamily">@font/opensans</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomBackButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="layout_gravity">start</item>
        <item name="android:layout_marginEnd">13dp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:background">@drawable/back</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert" >
        <item name="android:windowBackground">@drawable/phone_call_background</item>
    </style>

</resources>
