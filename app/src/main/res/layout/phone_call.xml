<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/phone_call_background">

    <Button
        style="@style/CustomBackButton"
        android:id="@+id/buttonBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutInstagram"
        app:layout_constraintTop_toBottomOf="@+id/buttonBack">

        <Button
            style="@style/CustomIcon"
            android:id="@+id/buttonSite"
            android:background="@drawable/tea4u_ava" />

        <Button
            style="@style/CustomIconsText"
            android:id="@+id/buttonTextSite"
            android:text="@string/instagram" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutInstagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutVk"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutSite">

        <Button
            style="@style/CustomIcon"
            android:id="@+id/buttonInstagram"
            android:background="@drawable/instagram" />

        <Button
            style="@style/CustomIconsText"
            android:id="@+id/buttonTextInstagram"
            android:text="@string/instagram" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutVk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutCall"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutInstagram">

        <Button
            style="@style/CustomIcon"
            android:id="@+id/buttonVK"
            android:background="@drawable/vk" />

        <Button
            style="@style/CustomIconsText"
            android:id="@+id/buttonTextVK"
            android:text="@string/vk" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutVk">

        <Button
            style="@style/CustomIcon"
            android:id="@+id/buttonCall"
            android:background="@drawable/phone_call" />

        <Button
            style="@style/CustomIconsText"
            android:id="@+id/buttonCallText"
            android:text="@string/mtc_call" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutViber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCall">

        <Button
            style="@style/CustomIcon"
            android:id="@+id/buttonViber"
            android:background="@drawable/viber_phone_call" />

        <Button
            style="@style/CustomIconsText"
            android:id="@+id/buttonViberText"
            android:text="@string/viber_call" />
    </LinearLayout>

    <Button
        style="@style/CustomText"
        android:id="@+id/buttonBackCallView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="34dp"
        android:background="@color/colorForSmallCategories"
        android:paddingHorizontal="19dp"
        android:stateListAnimator="@null"
        android:text="@string/back_call"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutViber" />
</androidx.constraintlayout.widget.ConstraintLayout>