<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_photo">


    <ProgressBar
        android:id="@+id/progressBarSplash"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginHorizontal="60dp"
        android:orientation="horizontal"
        android:progressTint="@color/colorOrange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.758" />

    <TextView
        android:textSize="20sp"
        android:textColor="@color/textColor"
        android:id="@+id/textViewForProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/downloading_new_teas"
        android:fontFamily="@font/opensans"
        app:layout_constraintEnd_toEndOf="@+id/progressBarSplash"
        app:layout_constraintStart_toStartOf="@+id/progressBarSplash"
        app:layout_constraintTop_toBottomOf="@+id/progressBarSplash"/>

</androidx.constraintlayout.widget.ConstraintLayout>